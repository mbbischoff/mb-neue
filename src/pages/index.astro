---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import { render } from 'astro:content';

const posts = (await getCollection('posts')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

async function getPostPreview(post: any) {
	try {
		const { Content } = await render(post);
		return Content;
	} catch (error) {
		// If rendering fails, return a simple text preview
		const content = post.body;
		const readMoreIndex = content.indexOf('<!-- more -->');
		const preview = readMoreIndex === -1 ? content : content.slice(0, readMoreIndex);
		return preview;
	}
}
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 720px;
				max-width: 100%;
				margin: 0 auto;
				padding: 2rem;
			}
			ul {
				list-style: none;
				padding: 0;
				margin: 0;
			}
			li {
				margin-bottom: 4rem;
			}
			li a {
				text-decoration: none;
				color: inherit;
			}
			.title {
				margin: 0;
				font-size: 1.5rem;
			}
			.date {
				margin: 0.5rem 0 0 0;
				color: #666;
			}
			.content {
				margin: 1rem 0 0 0;
			}
			.content p {
				margin: 1rem 0;
			}
			.content p:first-child {
				margin-top: 0;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<ul>
				{
					posts.map(async (post) => {
						const Preview = await getPostPreview(post);
						return (
							<li>
								<a href={`/${post.id}/`}>
									<h2 class="title">{post.data.title}</h2>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
									{post.body && (
										<div class="content">
											{typeof Preview === 'function' ? <Preview /> : <div set:html={Preview} />}
										</div>
									)}
								</a>
							</li>
						);
					})
				}
			</ul>
		</main>
		<Footer />
	</body>
</html>
