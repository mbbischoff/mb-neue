import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import PageTitle from '../../components/PageTitle.astro';

export async function getStaticPaths() {
	const poems = await getCollection('poems');
	return poems.map((poem) => ({
		params: { id: poem.id },
		props: { poem },
	}));
}

const { poem } = Astro.props;

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${poem.data.title} - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			.poem {
				margin-bottom: 4rem;
			}

			.poem-meta {
				display: flex;
				align-items: center;
				gap: var(--space-xs);
				margin-bottom: var(--space-s);
			}

			.poem-meta time {
				color: var(--theme-secondary);
				font-size: var(--font-size-small);
			}

			.poem-content {
				white-space: pre-line;
				margin: var(--space-s) 0;
			}

			.poem-content :global(p) {
				margin: var(--space-s) 0;
			}

			.poem-content :global(p:first-child) {
				margin-top: 0;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<PageTitle title={poem.data.title} />
			<article class="poem">
				<div class="poem-meta">
					<time datetime={poem.data.pubDate.toISOString()}>
						<FormattedDate date={poem.data.pubDate} />
					</time>
				</div>
				<div class="poem-content">
					{poem.body}
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html> 