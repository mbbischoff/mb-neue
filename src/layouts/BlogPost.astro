---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';
import Metadata from '../components/Metadata.astro';

type Props = CollectionEntry<'posts'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<BaseLayout title={title} description={description} image={heroImage} minimalLayout={true}>
  <article class="prose">
    <div class="title">
      <Metadata 
        date={pubDate} 
        readingTime={Math.ceil((await Astro.slots.render('default')).length / 1000)}
      />

      <h1>{title}</h1>
    </div>
    <slot />
  </article>

  <style>
    .hero-image {
      width: var(--max-width);
      height: auto;
      margin: 0 auto var(--space-l);
      border-radius: 4px;
    }
    .hero-image img {
      display: block;
      margin: 0 auto;
      border-radius: 12px;
      box-shadow: var(--box-shadow);
    }
    .prose {
      width: 100%;
      max-width: var(--max-width);
      margin: 0 auto;
      color: var(--theme-text);
    }

    .title h1 {
      margin-top: 0;
      margin-bottom: var(--space-l);
      font-size: var(--step-2);
    }
    .date {
      margin-bottom: 0.5em;
    }
    .date time {
      color: rgb(var(--gray));
    }
    .updated {
      font-size: 0.8em;
      color: rgb(var(--gray));
    }
    .updated time {
      color: rgb(var(--gray));
    }
    .tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5em;
      margin: 1em 0;
    }
    .tags a {
      display: inline-block;
      padding: 0.25em 0.5em;
      border-radius: 0.25em;
      background-color: rgb(var(--gray-light));
      color: rgb(var(--gray-dark));
      text-decoration: none;
      font-size: 0.8em;
    }
    .tags a:hover {
      background-color: rgb(var(--gray));
      color: rgb(var(--gray-light));
    }
    .content {
      margin-top: 1em;
      font-family: var(--font-family-system);
    }
    .content :global(h1) {
      margin-top: 2em;
      margin-bottom: 1em;
    }
    .content :global(h2) {
      margin-top: 1.5em;
      margin-bottom: 1em;
    }
    .content :global(h3) {
      margin-top: 1.5em;
      margin-bottom: 1em;
    }
    .content :global(p) {
      margin-bottom: 1.5em;
    }
    .content :global(ul) {
      margin-bottom: 1.5em;
    }
    .content :global(ol) {
      margin-bottom: 1.5em;
    }
    .content :global(li) {
      margin-bottom: 0.5em;
    }
 

    .content :global(blockquote p) {
      margin: 0;
      line-height: 1.6;
    }

    .content :global(blockquote p:last-child) {
      margin-bottom: 0;
    }
    .content :global(code) {
      background-color: rgb(var(--gray-light));
      padding: 0.2em 0.4em;
      border-radius: 0.25em;
      font-size: 0.9em;
    }
    .content :global(pre) {
      margin: 1.5em 0;
      padding: 1em;
      background-color: rgb(var(--gray-light));
      border-radius: 0.25em;
      overflow-x: auto;
    }
    .content :global(pre code) {
      background-color: transparent;
      padding: 0;
      border-radius: 0;
      font-size: 1em;
    }
    .content :global(img) {
      display: block;
      margin: 1.5em auto;
      max-width: 100%;
      height: auto;
      border-radius: 0.25em;
    }
    .content :global(table) {
      width: 100%;
      margin: 1.5em 0;
      border-collapse: collapse;
    }
    .content :global(th) {
      background-color: rgb(var(--gray-light));
      padding: 0.5em;
      text-align: left;
    }
    .content :global(td) {
      padding: 0.5em;
      border-bottom: 1px solid rgb(var(--gray));
    }
    .content :global(hr) {
      margin: 2em 0;
      border: none;
      border-top: 1px solid rgb(var(--gray));
    }
  </style>
</BaseLayout>
