---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  minimalLayout?: boolean;
}

const { title, description, image, minimalLayout = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        width: 100%;
        overflow-x: hidden;
        min-height: 100vh;
      }

      body {
        display: flex;
        flex-direction: column;
      }

      main {
        flex: 1;
        width: 100%;
        max-width: var(--max-width);
        margin: 0 auto;
        padding: var(--space-l) var(--space-s);
        box-sizing: border-box;
      }

      .content {
        width: 100%;
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 var(--space-s);
        box-sizing: border-box;
      }
    </style>
    <slot name="styles" />
  </head>
  <body>
    <Header minimalLayout={minimalLayout} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
