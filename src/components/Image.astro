---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  style?: string;
}

const { src, alt, width, height, class: className, loading = 'lazy', style } = Astro.props;
---

<img
  src={src}
  alt={alt}
  width={width}
  height={height}
  class={className}
  loading={loading}
  style={style}
/> 