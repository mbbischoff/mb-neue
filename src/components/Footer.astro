---
import { SITE_TITLE, navigation } from '../config';
import { socialLinks } from '../data/social';
---

<footer role="contentinfo">
  <div class="footer-container">
    <div class="footer-nav">
      <div class="footer-links">
        <nav aria-label="Footer navigation">
          {
            navigation.map(item => (
              <a
                href={item.href}
                aria-current={Astro.url.pathname === item.href ? 'page' : undefined}
              >
                {item.icon && <i class={`${item.icon} icon-width`}></i>}
                <span>{item.label}</span>
              </a>
            ))
          }
        </nav>
      </div>
      <div class="social-links">
        <nav aria-label="Social links">
          {
            socialLinks.map(link => (
              <a
                href={link.href}
                rel={link.rel}
                target={link.target}
                aria-label={link.ariaLabel}
              >
                 <i class={`${link.icon} icon-width`}></i> {link.label}
              </a>
            ))
          }
        </nav>
      </div>
    </div>
    <p class="footer-text">
      <a href="https://creativecommons.org/licenses/by-sa/4.0/" rel="license" class="no-underline">
        <span aria-hidden="true">©︎</span>
        <span aria-label="copyright">{new Date().getFullYear()}</span>
        <strong>{SITE_TITLE}</strong>
      </a><br />
      <small><em>there is still time</em></small><br />
      <a href="https://en.wikipedia.org/wiki/Hormone_replacement_therapy_(transgender)" target="_blank" rel="noopener noreferrer" class="no-underline"><span class="fleuron">❦</span></a>
    </p>
  </div>
</footer>

<style>
footer {
    border-top: 0.5px solid var(--theme-tertiary);
    padding: var(--space-m) 0;
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
}

.footer-container {
    font-family: var(--font-family-mono);
    max-width: var(--max-width);
    margin: 0 auto;
    box-sizing: border-box;
}

.footer-nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-l);
    margin-bottom: var(--space-xl);
    align-items: center;
    width: 100%;
    font-size: var(--step--1);
}

.footer-links,
.social-links {
    flex: 1;
    width: 100%;
    display: flex;
    justify-content: center;
}

.footer-links nav,
.social-links nav {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-2xs) var(--space-xl);
    width: fit-content;
    text-transform: lowercase;
    white-space: nowrap;
}

.footer-links a,
.social-links a {
    color: inherit;
    text-decoration: none;
    border-bottom: none;
    padding-bottom: 0;
    transition: color 0.2s ease-in-out;
}

.footer-links a:hover,
.social-links a:hover {
    text-decoration: none;
    color: var(--theme-accent);
    border-bottom: none;
}

.footer-text {
    color: var(--theme-secondary);
    text-align: center;
}

.footer-text small {
    opacity: 0.8;
}

.footer-text a {
    transition: color 0.2s ease-in-out;
}

.footer-text a:hover {
    color: var(--theme-accent);
}

.footer-text a:has(.fleuron) {
    border-bottom: none;
    padding-bottom: 0;
}

.footer-text a:has(.fleuron):hover {
    border-bottom: none;
    padding-bottom: 0;
}

.footer-links i,
.social-links i {
    margin-right: var(--space-3xs);
}

@media (min-width: 768px) {
    .footer-nav {
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: var(--space-l);
    }

    .footer-links {
        justify-content: flex-start;
    }

    .social-links {
        justify-content: flex-end;
    }

    .footer-links nav,
    .social-links nav {
        grid-template-columns: repeat(2, 1fr);
        gap: var(--space-2xs) var(--space-xl);
    }
}
</style>