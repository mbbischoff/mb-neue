---
import { SITE_TITLE, navigation } from '../config';
---

<footer role="contentinfo">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-links">
        <nav aria-label="Footer navigation">
          {
            navigation.map(item => (
              <a
                href={item.href}
                aria-current={Astro.url.pathname === item.href ? 'page' : undefined}
              >
                {item.label}
              </a>
            ))
          }
        </nav>
      </div>
      <div class="social-links">
        <nav aria-label="Social links">
          <a href="https://twitter.com/yourusername" rel="me" target="_blank" aria-label="X (Twitter)">twitter</a>
          <a href="https://bsky.app/profile/yourusername" rel="me" target="_blank" aria-label="Bluesky">bluesky</a>
          <a href="https://mastodon.social/@yourusername" rel="me" target="_blank" aria-label="Mastodon">mastodon</a>
          <a href="https://instagram.com/yourusername" target="_blank" aria-label="Instagram">instagram</a>
          <a href="https://github.com/yourusername" target="_blank" aria-label="GitHub">github</a>
          <a href="https://linkedin.com/in/yourusername" target="_blank" aria-label="LinkedIn">linkedin</a>
        </nav>
      </div>
    </div>
    <p class="footer-text">
      <a href="https://creativecommons.org/licenses/by-sa/4.0/" rel="license" class="no-underline">
        <span aria-hidden="true">©︎</span>
        <span aria-label="copyright">{new Date().getFullYear()}</span>
        <strong>{SITE_TITLE}</strong>
      </a><br />
      <small><em>there is still time</em></small><br />
      <a href="https://diyhrt.wiki" target="_blank" rel="noopener noreferrer" class="no-underline"><span class="fleuron">❦</span></a>
    </p>
  </div>
</footer>

<style>
  footer {
    font-size: var(--step--1);
    padding: var(--space-xs) 0;
    border-top: 0.5px solid var(--theme-border-secondary);
    margin: 0;
    background-color: var(--theme-background-offset);
    width: 100%;
  }

  .footer-container {
    max-width: var(--max-width);
    width: 100%;
    margin: 0 auto;
    padding: 0 var(--space-s);
    box-sizing: border-box;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-l);
    margin-bottom: var(--space-l);
    align-items: center;
    width: 100%;
  }

  .footer-links {
    flex: 1;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .social-links {
    flex: 1;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .footer-links nav,
  .social-links nav {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-2xs) var(--space-s);
    width: fit-content;
    text-transform: lowercase;
    white-space: nowrap;
  }

  @media (min-width: 768px) {
    .footer-content {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }

    .footer-links {
      justify-content: flex-start;
    }

    .social-links {
      justify-content: flex-end;
    }

    .social-links nav {
      justify-content: flex-end;
    }
  }

  .footer-links a,
  .social-links a {
    color: inherit;
    text-decoration: none;
    border-bottom: none;
    padding-bottom: 0;
    display: flex;
    align-items: center;
    transition: color 0.2s ease-in-out;
    font-size: var(--font-size-large);
  }

  .footer-links a:hover,
  .social-links a:hover {
    text-decoration: none;
    color: var(--theme-accent);
    border-bottom: none;
  }

  .footer-text {
    color: var(--theme-secondary);
    text-align: center;
  }

  .footer-text a {
    font-size: inherit;
  }

  .footer-text a:hover {
    color: var(--theme-accent);
  }

  .footer-text a:has(.fleuron) {
    border-bottom: none;
    padding-bottom: 0;
  }

  .footer-text a:has(.fleuron):hover {
    border-bottom: none;
    padding-bottom: 0;
  }
</style>