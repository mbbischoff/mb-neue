---
import { SITE_TITLE, navigation } from '../config';
---

<footer role="contentinfo">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-links">
        <nav aria-label="Footer navigation">
          {
            navigation.map(item => (
              <a
                href={item.href}
                aria-current={Astro.url.pathname === item.href ? 'page' : undefined}
              >
                {item.label}
              </a>
            ))
          }
        </nav>
      </div>
      <div class="social-links">
        <nav aria-label="Social links">
          <a href="https://twitter.com/yourusername" rel="me" target="_blank" aria-label="X (Twitter)">ùïèÔ∏é twitter</a>
          <a href="https://mastodon.social/@yourusername" rel="me" target="_blank" aria-label="Mastodon">‚åòÔ∏é mastodon</a>
          <a href="https://letterboxd.com/yourusername" target="_blank" aria-label="Letterboxd">‚åñÔ∏é letterboxd</a>
          <a href="https://www.goodreads.com/yourusername" target="_blank" aria-label="Goodreads">‚åóÔ∏é goodreads</a>
          <a href="https://bsky.app/profile/yourusername" rel="me" target="_blank" aria-label="Bluesky">‚å®Ô∏é bluesky</a>
        </nav>
      </div>
    </div>
    <p class="footer-text">
      <span aria-hidden="true">¬©Ô∏é</span>
      <span aria-label="Copyright">{new Date().getFullYear()}</span>
      <strong>{SITE_TITLE}</strong>.
      <a href="https://creativecommons.org/licenses/by-sa/4.0/" rel="license"
        >Some rights reserved</a
      >. Made in NY.
    </p>
  </div>
</footer>

<style>
  footer {
    padding: var(--space-l) 0;
    border-top: 0.5px solid var(--theme-tertiary);
    margin: 0 calc(-1 * var(--space-s));
  }

  .footer-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--space-s);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-l);
  }

  .footer-links {
    flex: 1;
  }

  .social-links {
    flex: 1;
    display: flex;
    justify-content: flex-end;
  }

  .footer-links nav,
  .social-links nav {
    display: grid;
    grid-template-columns: repeat(2, auto);
    row-gap: var(--space-s);
    column-gap: var(--space-l);
    width: fit-content;
    text-transform: lowercase;
  }

  .footer-links a,
  .social-links a {
    color: inherit;
    text-decoration: none;
    border-bottom: none;
    padding-bottom: 0;
    display: flex;
    align-items: center;
    transition: color 0.2s ease-in-out;
  }

  .footer-links a:hover,
  .social-links a:hover {
    text-decoration: none;
    color: var(--theme-accent);
    border-bottom: none;
  }

  .social-links i {
    font-size: 1.2rem;
  }

  .footer-text {
    color: var(--theme-secondary);
  }
  
  .footer-text a {
  }

  .footer-text a:hover {
  }
</style>
