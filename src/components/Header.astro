---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { SITE_TITLE_SHORT, navigation } from '../config';

interface Props {
  hideNav?: boolean;
  minimalLayout?: boolean;
}

const { minimalLayout = false } = Astro.props;
---

<header role="banner">
  <div class="header-container">
    <nav class="internal-links" aria-label="Main navigation">
      {navigation.map(item => (
        <HeaderLink
          href={item.href}
          class={`nav-link ${minimalLayout ? 'minimal' : ''}`}
          aria-current={Astro.url.pathname === item.href ? 'page' : undefined}
        >
          {item.label}
        </HeaderLink>
      ))}
    </nav>

    <div class="title-container">
      <h1 class={`site-title ${minimalLayout ? 'minimal' : ''}`}>
        <a href="/">{SITE_TITLE_SHORT}</a>
      </h1>

      {
        !minimalLayout && (
          <p class="site-description">
            <strong>mb <span class="last-name">bischoff</span></strong> <small class="pronouns">(she/they)</small> makes <a href="https://lickability.com">software</a>, <a href="/archive">sentences</a>, & <a href="https://absolutelycrushed.com">sounds</a>.
          </p>
        )
      }
    </div>
  </div>
</header>

<style>
  header {
    padding: var(--space-xs) 0;
  }

  .header-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--space-s);
    box-sizing: border-box;
  }

  .internal-links {
    display: flex;
    justify-content: space-between;
    width: 100%;
    text-transform: lowercase;
    text-align: center;
  }

  .title-container {
    text-align: left;
  }

  .site-title {
    font-size: var(--font-size-huge);
    line-height: 1;
	padding-block: var(--font-size-massive);
    margin: 0;
    color: var(--theme-accent);
    text-align: center;
    font-weight: 900;
    letter-spacing: -0.04em;
    text-decoration: none;
  }

  .site-title a {
    text-decoration: none;
    color: inherit;
    border-bottom: none;
    padding-bottom: 0;
    display: inline-block;
    transform-origin: center center;
    transition: transform 0.3s ease-out;
  }

  .site-title a:hover {
    animation: hoverPulse 1s ease-in-out infinite;
  }

  @keyframes hoverPulse {
    0% {
      transform: scale(1) rotate(0deg);
    }
    50% {
      transform: scale(1.2) rotate(10deg);
    }
    100% {
      transform: scale(1) rotate(0deg);
    }
  }

  .site-title.minimal {
    color: var(--theme-secondary);
  }

  .site-title.minimal a:hover {
    color: var(--theme-accent);
  }

  .site-title a {
    text-decoration: none;
    color: inherit;
    border-bottom: none;
    padding-bottom: 0;
  }

  .site-description {
    text-align: center;
    margin-bottom: var(--space-s);
    font-size: clamp(0.8rem, 2vw, var(--font-size-large));
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
  }

  .first-name {
    display: inline-block;
    transition: transform 0.2s ease-in-out;
  }

  .first-name:hover {
    animation: pulse 1s infinite;
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
    100% {
      transform: scale(1);
    }
  }

  .site-description a {
    color: var(--theme-accent);
    text-decoration: none;
    border-bottom: none;
    padding-bottom: 0;
  }

  .site-description a:hover {
    color: var(--theme-secondary-hover);
    text-decoration: none;
    border-bottom: none;
  }

  :global(.nav-link) {
    border-bottom: none;
    padding-bottom: 0;
    margin-right: var(--space-s);
  }

  :global(.nav-link:last-child) {
    margin-right: 0;
  }

  :global(.nav-link:hover) {
    border-bottom: none;
  }

  :global(.nav-link.minimal) {
    color: var(--theme-secondary);
  }

  :global(.nav-link.minimal:hover) {
    color: var(--theme-secondary-hover);
  }

  :global(.nav-link.minimal.active) {
    color: var(--theme-secondary);
  }

  @media (max-width: 600px) {
    .pronouns {
      display: none;
    }
  }
</style>
