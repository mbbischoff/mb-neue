---
import HeaderLink from './HeaderLink.astro';
import InteractiveTitle from './InteractiveTitle.astro';
import { SITE_TITLE } from '../consts';
import { SITE_TITLE_SHORT, navigation } from '../config';

interface Props {
  hideNav?: boolean;
  minimalLayout?: boolean;
}

const { minimalLayout = false } = Astro.props;
---

<header role="banner" class="mono">
  <div class="header-container">
    <nav class="internal-links" aria-label="Main navigation">
      {navigation.filter(item => !item.hideInHeader).map(item => (
        <HeaderLink
          href={item.href}
          class={`nav-link ${minimalLayout ? 'minimal' : ''}`}
          aria-current={Astro.url.pathname === item.href ? 'page' : undefined}
        >
          {item.label}
        </HeaderLink>
      ))}
    </nav>

    <InteractiveTitle minimalLayout={minimalLayout} title={SITE_TITLE_SHORT} />
  </div>
</header>

<style>
  header {
    padding: var(--space-xs) 0;
  }

  .header-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--space-s);
    box-sizing: border-box;
  }

  .internal-links {
    display: flex;
    justify-content: space-between;
    gap: var(--space-2xs);
    width: 100%;
    text-transform: lowercase;
    text-align: center;
    margin-bottom: var(--space-l);
  }

  .title-container {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  :global(.nav-link) {
    border-bottom: none;
    padding-bottom: 0;
  }

  :global(.nav-link:hover) {
    border-bottom: none;
  }

  :global(.nav-link.minimal) {
    color: var(--theme-secondary);
  }

  :global(.nav-link.minimal:hover) {
    color: var(--theme-secondary-hover);
  }

  :global(.nav-link.minimal.active) {
    color: var(--theme-secondary);
  }

  .title-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-m);
  }
</style>
