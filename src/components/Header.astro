---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav class="nav-container">
		<div class="internal-links">
			<HeaderLink href="/" class="nav-link">Home</HeaderLink>
			<HeaderLink href="/now" class="nav-link">Now</HeaderLink>
			<HeaderLink href="/archive" class="nav-link">Archive</HeaderLink>
			<HeaderLink href="/about" class="nav-link">About</HeaderLink>
			<HeaderLink href="/contact" class="nav-link">Contact</HeaderLink>
		</div>
		<h1 class="site-title">
			<a href="/">{SITE_TITLE}</a>
		</h1>
	</nav>
</header>

<style>
	header {
		background-color: var(--theme-bg);
		border-bottom: 1px solid var(--theme-border);
		padding: var(--space-m) 0;
	}

	.nav-container {
		max-width: 800px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: var(--space-m);
		padding: 0 var(--space-s);
	}

	.internal-links {
		display: flex;
		justify-content: space-between;
		width: 100%;
		font-size: 1.25rem;
	}

	.site-title {
		font-size: 2.5rem;
		margin: 0;
		font-variation-settings: 'wght' 700;
	}

	.site-title a {
		text-decoration: none;
		color: inherit;
	}
</style>
